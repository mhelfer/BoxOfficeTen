<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:padding="10dp"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@android:color/white">
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/moveInfoLayout">

        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" 
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/infoPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/infoTitle"/>

        <TextView
            android:id="@+id/infolabelSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/infoPoster"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/synopsis" />

        <TextView
            android:id="@+id/infoSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/black"
            android:layout_below="@+id/infolabelSynopsis" />
        
        <TextView
            android:id="@+id/infoLabelCast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/infoSynopsis"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/cast" />
        
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"	
        	android:layout_below="@+id/infoLabelCast"
        	android:id="@+id/infoCastLayout">
        </LinearLayout>
        
        <Button
            android:id="@+id/infoReviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoCastLayout"
            android:layout_centerHorizontal="true"
            android:text="Reviews" />
        
        <TextView 
            android:id="@+id/footerSeperator"
        	android:layout_width="fill_parent"
			android:layout_height="2dip"
			android:background="@android:color/black" 
			android:layout_marginTop="10dp"
			android:textColor="@android:color/black"
			android:layout_below="@+id/infoReviewButton"/>

        <TextView
            android:id="@+id/infoRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/footerSeperator"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/infoFreshness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/footerSeperator"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/infoRuntime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/footerSeperator"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
</ScrollView>
